<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="ipg"></dubbo:application>
    <dubbo:registry id="dubbo-provider-registry" address="zookeeper://127.0.0.1:2181" check="false"
                    timeout="15000"></dubbo:registry>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.cmos.ipg.dubbo.ConfigureAgentService" ref="configureAgentService" />
    <dubbo:protocol name="dubbo" port="20880"></dubbo:protocol>

    <!-- 和本地bean一样实现服务 -->
    <bean id="configureAgentService" class="com.cmos.ipg.dubbo.impl.ConfigureAgentServiceImpl" />


</beans>